<?xml version="1.0"?>  
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_0_0.dtd">  

<routes> 
 
	 <route>  
	 	<pattern>/action/{actionName}/authCode/{authCode}</pattern>
	 	<generated-parameter name="javax.portlet.action">{actionName}</generated-parameter>
		<generated-parameter name="authCode">{authCode}</generated-parameter> 	
	 	<ignored-parameter name="p_auth"/>
		<ignored-parameter name="p_p_id"/>
	 	<implicit-parameter name="p_p_lifecycle">1</implicit-parameter>  
	  	<implicit-parameter name="p_p_state">normal</implicit-parameter>  
	  	<implicit-parameter name="p_p_mode">view</implicit-parameter>
	  	<implicit-parameter name="p_p_col_id">column-1</implicit-parameter>
	    <implicit-parameter name="p_p_col_count">1</implicit-parameter>
	    <implicit-parameter name="jspPage">/html/portlet/userreg/account_creation.jsp</implicit-parameter>
	    
	 </route>  
 
</routes>  